{
    "name": "nails/module-invoice",
    "keywords": [
        "Nails",
        "Shed Collective",
        "CodeIgniter",
        "Invoice Module",
        "Invoicing",
        "Payments"
    ],
    "homepage": "http://nailsapp.co.uk/modules/invoice",
    "description": "This is the Invoice module for nails, it provides an interface for raising invoices and accepting payment from customers.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ext-json": "*",
        "nails/common": "dev-feature/pre-new-admin",
        "nails/module-address": "dev-feature/pre-new-admin",
        "nails/module-admin": "dev-feature/pre-new-admin",
        "nails/module-auth": "dev-feature/pre-new-admin",
        "nails/module-currency": "dev-feature/pre-new-admin",
        "nails/module-pdf": "dev-feature/pre-new-admin",
        "nails/skin-invoice-classic": "dev-feature/pre-new-admin"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpstan/phpstan": "1.*"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "analyse": "./vendor/bin/phpstan analyse -c .phpstan/config.neon"
    },
    "autoload": {
        "psr-4": {
            "Nails\\Invoice\\": "src/"
        }
    },
    "suggest": {
        "nails/driver-invoice-stripe": "Accept payments using Stripe",
        "nails/driver-invoice-gocardless": "Accept payments using GoCardless",
        "nails/driver-invoice-worldpay": "Accept payments using WorldPay",
        "nails/driver-invoice-authorize-net": "Accept payments using Authorize.NET"
    },
    "extra": {
        "nails": {
            "moduleName": "invoice",
            "type": "module",
            "namespace": "Nails\\Invoice\\",
            "data": {
                "nails/module-admin": {
                    "autoload": {
                        "assets": {
                            "js": [
                                "admin.min.js"
                            ],
                            "css": [
                                "admin.min.css"
                            ]
                        }
                    }
                },
                "nails/module-api": {
                    "namespace": "invoice"
                }
            }
        }
    }
}
